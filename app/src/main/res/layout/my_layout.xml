<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_layout">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dietbuddy.tralice.mapsapplication.MapsActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <include
        android:id="@+id/controll_layout"
        layout="@layout/controlbar_layout"
        />


    <TextView
        android:id="@+id/run_calories"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Burn Calories"
        android:background="#ffff"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textSize="18dp"
        android:textColor="#ff0000"
        android:textAlignment="center"
        android:layout_below="@+id/controll_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
